<%= title @page.title if @page.title.present? %>
<%=
decorate(PageDecorator, @page) do |page_decorated|
  raw(
    content_tag(:div, page_decorated.content, id: page_decorated.div_id, data: page_decorated.mercury_data)
  
    if current_user && current_user.admin?
      + link_to(t('page.edit.link'), page_decorated.edit_link, class: 'top-buffer')
    end
  
    if page_decorated.commentable?
      + content_tag(:div, nil, id: page_decorated.disqus_id, data: page_decorated.disqus_data)
    end
    )
end
%>
