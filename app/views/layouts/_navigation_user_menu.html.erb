<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %> <b class="caret"></b></a>
    <ul class="dropdown-menu">
      <% if current_user.admin? %>
        <li><%= link_to t('header.menu.admin'), admin_dashboard_path %></li>
      <% end %>
      <li><%= link_to t('header.menu.profile'), edit_user_registration_path %></li>
      <li><%= link_to t('header.menu.logout'), destroy_user_session_path, method: :delete  %></li>
    </ul>
  </li>
  
<% else %>
  <li><%= link_to t('header.menu.register'), new_user_registration_path %></li>
  <li><%= link_to t('header.menu.login'), new_user_session_path  %></li>
<% end %>