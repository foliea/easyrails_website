<%= title t('account.unlock.title') %>
<div class="row clearfix top-buffer">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title"><%= t('account.unlock.title') %></h3>
      </div>
      <div class="panel-body">
      <%= simple_form_for(resource, url: unlock_path(resource_name), 
                                    as: resource_name,
                                    html: { method: :post, class: 'form-vertical' },
                                    wrapper: :vertical_form) do |f| %>
        <%= f.input :email %>
        <%= f.submit t('helpers.submit.email.unlock') %>
      <% end %>
      <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
