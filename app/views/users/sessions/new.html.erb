<%= title t('account.sign_in.title') %>
<div class="row clearfix top-buffer">
  <div class="col-md-4"></div>
	<div class="col-md-4">
	  <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-title"><%= t('account.sign_in.title') %></h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  				<div class="form-group">
  					 <%= f.label :email, t('account.field.email') %>
  					 <%= f.email_field :email,
  					                   autofocus: true,
  					                   class: 'form-control' %>
  				</div>
  				<div class="form-group">
  					 <%= f.label :password, t('account.field.password') %>
  					 <%= f.password_field :password,
                                   class: 'form-control' %>
  				</div>
  				<% if devise_mapping.rememberable? -%>
  				  <div class="checkbox">
              <%= f.check_box :remember_me %> <%= f.label :remember_me, t('account.sign_in.remember_me') %>
            </div>
          <% end -%>
          
          <%= button_tag(type: 'submit', class: "btn btn-success") do %>
            <%= fa_icon 'sign-in', text: t('account.sign_in.button') %>
          <% end %>
  			<% end %>
    			<%= render "users/shared/links" %>
    			<%= render "users/shared/links_connect_with" %>
      </div>
	  </div>
  </div>
  <div class="col-md-4"></div>
</div>