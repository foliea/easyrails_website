<%= title t('account.recover.title') %>
<div class="row clearfix top-buffer">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t('account.recover.title') %></h3>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, url: password_path(resource_name),
                            as: resource_name,
                            html: { method: :post, class: 'form-vertical' },
                            wrapper: :vertical_form) do |f| %>
          <%= f.input :email %>
          <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
            <%= fa_icon 'envelope-o', text: t('account.recover.button') %>
          <% end %>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
